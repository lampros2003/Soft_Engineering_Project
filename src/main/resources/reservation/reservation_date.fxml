<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="500" style="-fx-background-color: #f4f4f6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reservation.ReservationDateController">


    <children>
        <VBox alignment="TOP_CENTER" layoutY="51.0" spacing="28" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="51.0">


            <children>
                <Label text="Select the date for your reservation:">
                    <font><Font size="18" /></font>
                </Label>


                <HBox alignment="CENTER" spacing="42">
                    <children>


                        <DatePicker fx:id="datePicker" prefWidth="220" />


                        <VBox spacing="8" style="-fx-padding: 14 18 14 18; -fx-background-color: #efe9fb; -fx-background-radius: 8;">
                            <children>
                                <Label text="* How many people will come?">
                                    <font><Font size="14" /></font>
                                </Label>
                                <TextField fx:id="peopleField" prefWidth="180" promptText="e.g. 3..." style="-fx-border-color: #a58be0; -fx-border-radius: 6; -fx-background-radius: 6;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>


                <Button fx:id="okButton" onAction="#handleOkButton" style="-fx-background-color: transparent;                                -fx-border-color: #34d399;                                -fx-border-width: 2;                                -fx-border-radius: 4;                                -fx-background-radius: 4;                                -fx-padding: 6 24 6 24;" text="OK" />
            </children>


            <padding>
                <Insets bottom="20" left="20" right="20" top="0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
